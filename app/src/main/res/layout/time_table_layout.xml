<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_timetable"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_monday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
            android:background="@color/gray_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_subject_name"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="Discrete Mathematics"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_marginLeft="10sp"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/ll_hide_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:orientation="horizontal">





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section:"
                    android:padding="5sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:padding="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit hour:"
                    android:padding="5sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:padding="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="16sp"
                    android:text="Code:"/>
                <TextView
                    android:id="@+id/tv_subject_code"
                    android:layout_width="80sp"
                    android:layout_height="20sp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10sp"
                    android:text="1234567"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="16sp"
                    android:text="Class time:"/>

                <TextView
                    android:id="@+id/tv_class_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10sp"
                    android:text="08:00:00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:text="-"
                    android:padding="5sp"/>
                <TextView
                    android:id="@+id/tv_class_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:text="08:00:00"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="at"
                    android:padding="5sp"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_missing_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room"
                    android:padding="5sp"/>
                <TextView
                    android:id="@+id/tv_room_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room 1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="5sp"
                    android:textSize="16sp"
                    android:text="Semester:"/>
                <TextView
                    android:id="@+id/tv_semester"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10sp"
                    android:text="8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="5sp"
                    android:textSize="16sp"
                    android:text="S"/>
                <TextView
                    android:id="@+id/tv_subject_id"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="5sp"
                    android:textSize="16sp"
                    android:text="id"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@color/button_color" />
</LinearLayout>