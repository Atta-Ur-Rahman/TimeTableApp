<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.attaurrahman.timetableapp.fragment.LoginFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="40sp"
        android:textColor="@color/text_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20sp">
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:text="mujtaba@uetpeshawar.com"
            android:background="@drawable/squreline"/>


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:text="1234"
            android:inputType="textPassword"
            android:layout_marginTop="10sp"
            android:background="@drawable/squreline"/>

     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <Button
             android:id="@+id/btn_login"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20sp"
             android:text="Login"
             android:background="@color/text_color"/>
         <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/cp_login"
             android:layout_width="match_parent"
             android:layout_height="40sp"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="25sp"
             app:cpv_animAutostart="false"
             app:cpv_color="@color/colorPrimaryDark"
             app:cpv_indeterminate="true" />
     </FrameLayout>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="right"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:text="forget password"
            android:layout_marginRight="20sp"/>


    </LinearLayout>

</LinearLayout>
